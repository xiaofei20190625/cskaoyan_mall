<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.mall.mapper.RegionMapper">
    <!--在同一个表中进行多次嵌套查询，使用分次查询比较好-->
    
    <resultMap id="provinceMap" type="com.cskaoyan.mall.bean.Province">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="code" column="code"/>
        <collection property="children" column="id" select="com.cskaoyan.mall.mapper.RegionMapper.queryAllCityByPid"/>
    </resultMap>
    <select id="queryAllProvince" resultMap="provinceMap">
      SELECT id,`name`,`type`,`code`,pid FROM cskaoyan_mall_region WHERE `type` = 1
    </select>

    <resultMap id="cityMap" type="com.cskaoyan.mall.bean.City">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="code" column="code"/>
        <collection property="children" column="id" select="com.cskaoyan.mall.mapper.RegionMapper.queryAllDistrictByCode"/>
    </resultMap>
    <select id="queryAllCityByPid" resultMap="cityMap">
        SELECT id,`name`,`type`,`code`,pid as ccode FROM cskaoyan_mall_region WHERE `type` = 2 and pid = #{id}
    </select>

    <resultMap id="districtMap" type="com.cskaoyan.mall.bean.Discrict">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="code" column="code"/>
    </resultMap>
    <select id="queryAllDistrictByCode" resultMap="districtMap">
        SELECT id,`name`,`type`,`code`,pid as dcode FROM cskaoyan_mall_region WHERE `type` = 3 and pid = #{id}
    </select>
</mapper>